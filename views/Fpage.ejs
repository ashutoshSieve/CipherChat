<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cipher Chat</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        body {
            font-family: Arial, sans-serif;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Ensure footer stays at the bottom */
        }

        .navbar {
            background-color: transparent;
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: bold;
        }

        /* Center the heading */
        h3 {
            text-align: center;
            margin-top: 20px;
        }

        /* Center the welcome message */
        p {
            text-align: center;
            margin-top: -10px;
            color: grey;
        }

        /* Logout button on the right side of the page */
        .logout-btn {
            position: absolute;
            top: 80px; /* Adjust for navbar height */
            right: 20px;
        }

        .logout-btn a {
            text-decoration: none;
        }

        /* Center the input section */
        form {
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }

        form input {
            width: 300px;
            padding: 5px;
            border-radius: 5px;
            margin-right: 10px;
        }

        form button {
            padding: 5px 15px;
            border-radius: 5px;
        }

        /* Center the communities button */
        .communities-btn {
            display: block;
            margin: 20px auto;
            text-decoration: none;
            color: white;
        }

        .communities-btn a {
            text-decoration: none;
            color: white;
        }

        .communities-btn a:hover {
            text-decoration: none;
        }

        /* Card container styling */
        #con {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            padding: 20px;
        }

        .card {
            width: 18rem;
            margin: 10px;
        }

        /* Remove underline from all anchor tags globally */
        a {
            text-decoration: none;
            color: inherit;
        }

        a:hover {
            text-decoration: none;
        }

        /* Footer styling */
        .footer {
            padding: 20px 0;
            position: relative;
            width: 100%;
        }

        .footer a {
            text-decoration: none;
            color: #007bff;
        }

        .footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">CipherChat</a>
            <a class="nav-link" href="/">Home</a>
        </div>
    </nav>

    <!-- Logout button on the right side -->
    <button class="btn btn-danger logout-btn"><a href="/logout" class="text-white">Logout</a></button>

    <!-- Heading and Welcome message in center -->
    <h3>Global</h3>
    <p>welcome <%= Users %></p>

    
    <form id="postForm">
        <input type="text" name="posts" placeholder="Post something" id="postInput" required>
        <button type="submit" id="postButton" class="btn btn-primary">Post</button>
    </form>

    
    <button class="btn btn-secondary communities-btn"><a href="/communites">Communities</a></button>

    
    <div id="con">
        <% if (Array.isArray(data)) { %>
            <% data.forEach((ele) => { %>
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">
                            <%= ele ? ele.substring(0, 100) : "" %>
                            <% if (ele && ele.length > 100) { %>
                              <a href="/readmore/Global/<%=id%>"> read more..</a>
                            <% } %>
                          </p>                          
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    
    <script>
        const FpageSocket = io("/F");
        const user = "<%= Users %>";
        const id= "<%= id %>";

        FpageSocket.on("posted", ({ post, id }) => {
            let existingPost = document.querySelector(`[data-user="${id}"]`);
    
            if (existingPost) {
                existingPost.innerText = post; // Update the post if it exists
            } else {
                // Create a new post element if it doesn't exist

                const newCon = document.createElement("div");
                newCon.classList.add("card");
                newCon.innerHTML = `<div class="card-body"><p class="card-text" data-user="${id}">${post.substring(0,100)}</p></div>`;
                
                document.getElementById("con").appendChild(newCon);
            }
        });
    
        document.getElementById("postForm").addEventListener("submit", (e) => {
            e.preventDefault();
    
            const newPost = document.getElementById("postInput").value;
            if (newPost.trim() !== "") {
                FpageSocket.emit("newPost", newPost, id); // Emit new post and user
                document.getElementById("postInput").value = "";
            }
        });
    </script>

    <!-- Footer -->
    <footer class="footer text-center text-lg-start mt-5">
        <div class="text-center p-3">
            <a href="https://www.linkedin.com/in/your-profile/" target="_blank" class="text me-3">
                <i class="fab fa-linkedin"></i> LinkedIn
            </a>
            Made by Ashutosh Gupta
        </div>
    </footer>

</body>

</html>
