<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cipher Chat</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        body {
            font-family: Arial, sans-serif;
            height: 100vh; /* Full viewport height */
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: transparent;
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: bold;
        }

        h3 {
            text-align: center;
            margin-top: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 20px 0;
        }

        form input[type="text"] {
            width: 60%; /* Smaller input width */
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        form button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        form button:hover {
            background-color: #0056b3;
        }

        .cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start; /* Cards start from the left */
            margin: 20px;
        }

        .small-card {
            margin: 10px;
            width: 18rem; /* Card width */
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .small-card .card-body {
            padding: 10px;
        }

        .footer {
            padding: 20px 0;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .footer a {
            text-decoration: none;
            color: #007bff;
        }

        .footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">CipherChat</a>
            <a class="nav-link" href="/">Home</a> <!-- Home link added -->
        </div>
    </nav>

    <!-- Heading -->
    <h3><%=name%></h3>

    <!-- Post Form -->
    <form id="FormPost">
        <input type="text" name="content" placeholder="Post your thoughts..." id="inputPost">
        <button type="submit">Post</button>
    </form>

    <!-- Cards Container -->
    <div class="cards-container" id="con">
        <% if (result.length > 0) { %>
            <% result.forEach((ele) => { %>
                <div class="small-card">
                    <div class="card-body">
                        <!-- will print ele.post  -->
                         <p class="card-text">
                            <%= ele.post ? ele.post.substring(0, 100) : "" %>
                            <% if (ele.post && ele.post.length > 100) { %>
                            <a href="/readmore/<%=name%>/<%=ele._id%>"> read more..</a>
                            <% } %>
                        </p>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>


    <script src="/socket.io/socket.io.js"></script>
    <script>
        const CommSocket = io("/C");
        const id={id};
        // Listen for new posts from the server
        CommSocket.on("posted", ({ post, user }) => {
            let existingPost = document.querySelector(`[data-user="${user}"]`);

            if (existingPost) {
                existingPost.innerText = post; // Update the text content
            } else {
                // If no existing post is found, create a new post
                const newCon = document.createElement("div");
                newCon.classList.add("small-card");
                newCon.innerHTML = `<div class="card-body"><p class="card-text" data-user="${user}">${post.substring(0,100)}</p></div>`;
                
                // Append to the cards container
                document.getElementById("con").appendChild(newCon);
            }
        });


        // Handle form submission
        document.getElementById("FormPost").addEventListener("submit", (e) => {
            e.preventDefault();
            const newPost = document.getElementById("inputPost").value;

            CommSocket.emit("newPost", newPost, "<%= user %>", "<%= name %>");
            document.getElementById("inputPost").value = "";
        });
    </script>

    <!-- Footer -->
    <footer class="footer text-center text-lg-start mt-5">
        <div class="text-center p-3">
            <a href="https://www.linkedin.com/in/your-profile/" target="_blank" class="text me-3">
                <i class="fab fa-linkedin"></i> LinkedIn
            </a>
            Made by Ashutosh Gupta
        </div>
    </footer>

    <script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
